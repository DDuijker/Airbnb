@model MVC.ViewModels.PropertyDetailsView 
<div class="container mx-auto  ">
  <div class="overflow-x-auto relative shadow-md sm:rounded-lg w-full sm:w-3/4 mx-auto my-6">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <caption class="p-5 text-lg text-white font-semibold text-left  bg-red-400 dark:text-white dark:bg-gray-800"> @Html.DisplayFor(model => model.Property.Address) </caption>
      <thead class="text-xs text-gray-700 uppercase bg-red-400   dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.Address) </th>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.City) </th>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.Zip) </th>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.Country) </th>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.Price) </th>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.NumberOfRooms) </th>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.NumberOfBeds) </th>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.NumberOfBathrooms) </th>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.Description) </th>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.Type) </th>
          <th scope="col" class="py-3 px-6"> @Html.DisplayNameFor(model => model.Property.Title) </th>
        </tr>
      </thead>
      <tbody>
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"> @Html.DisplayFor(model => model.Property.Address) </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"> @Html.DisplayFor(model => model.Property.City) </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"> @Html.DisplayFor(model => model.Property.Zip) </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"> @Html.DisplayFor(model => model.Property.Country) </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"> $@Html.DisplayFor(model => model.Property.Price) </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"> @Html.DisplayFor(model => model.Property.NumberOfRooms) </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"> @Html.DisplayFor(model => model.Property.NumberOfBeds) </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"> @Html.DisplayFor(model => model.Property.NumberOfBathrooms) </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-wrap dark:text-white"> @Html.DisplayFor(model => model.Property.Description) </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"> @Html.DisplayFor(model => model.Property.Type) </th>
          <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"> @Html.DisplayFor(model => model.Property.Title) </th>
        </tr>
      </tbody>
    </table>
    </table>
  </div>
  <div class="container flex justify-center flex-row mx-auto">
    <hr />
    <div class="p-4 w-full max-w-2xl bg-white rounded-lg border border-gray-200 shadow-md sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700 my-6 mx-auto">
      <x-jet-validation-errors class="mb-4" />
      <form class="space-y-6" asp-action="createReservation">
        <h5 class="text-xl font-medium text-gray-900 dark:text-white">Create a new Reservation</h5>
        <div class="col-md-6">
          <label for="EpochArrival" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Date:</label>
          <input type="date" name="EpochArrival" id="EpochArrival" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white lowercase">
        </div>
        <div class="form-group">
          <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" for="AmountOfNights">How long do you plan to stay?</label>
          <select class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white lowercase" name="AmountOfNights" id="AmountOfNights">
            <option value="1">1 Night</option>
            <option value="2">2 Nights</option>
            <option value="3">3 Nights</option>
            <option value="4">4 Nights</option>
            <option value="5">5 Nights</option>
            <option value="6">6 Nights</option>
            <option value="7">7 Nights</option>
          </select>
        </div <h5 class="text-xl font-medium text-gray-900 dark:text-white">Enter Details:</h5>
        <div class="relative z-0 w-full mb-6 group">
          <input type="email" name="Email" id="Email" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " required />
          <label for="Email" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Email address</label>
        </div>
        <div class="grid md:grid-cols-2 md:gap-6">
          <div class="relative z-0 w-full mb-6 group">
            <input type="text" name="FirstName" id="FirstName" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " required />
            <label for="FirstName" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">First name</label>
          </div>
          <div class="relative z-0 w-full mb-6 group">
            <input type="text" name="LastName" id="LastName" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " required />
            <label for="LastName" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Last name</label>
          </div>
        </div>
        <div class="grid md:grid-cols-2 md:gap-6">
          <div class="relative z-0 w-full mb-6 group">
            <input type="tel" pattern="[0-9]{10}" name="PhoneNumber" id="PhoneNumber" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " required />
            <label for="PhoneNumber" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Phone number (0123456789)</label>
          </div>
        </div>
        <input type="hidden" name="PropertyId" value="@Model.Property.Id" />
        <button type="submit" value="create" class="w-full text-white bg-red-400 hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Create Appointment</button>
      </form>
    </div>
  </div>