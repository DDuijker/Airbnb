<Window x:Class="WpfApp1.Windows.PickProperty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Windows"
        mc:Ignorable="d"
        Title="Pick Property" Height="450" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Properties" VerticalAlignment="Top" Height="36" Width="150" FontSize="30"/>
        <ListBox Grid.Column="0" x:Name="LandlordsListBox" SelectedItem="{Binding SelectedProperty}" ItemsSource="{Binding AllProperties}" DisplayMemberPath="Address" VerticalAlignment="Top" Margin="0,40,0,0" Width="130" Height="270"/>
        <Button Grid.Column="0" x:Name="PickPropertyButton" Command="{Binding PickCommand}" Content="Pick property" VerticalAlignment="Top" Margin="0,320,0,0" Width="130" Height="30" />
        <Button Grid.Column="0" x:Name="CancelButton" Command="{Binding CancelCommand}" Content="Cancel" VerticalAlignment="Top" Margin="0,360,0,0" Width="130" Height="30" />
    </Grid>
</Window>
