<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp" 
        xmlns:Views="clr-namespace:AirBnB.Views"
        mc:Ignorable="d"
        Title="AirBnB" Height="500" Width="800">
    <Grid Margin="10
          ">
        

        <StackPanel Orientation="Horizontal">
            <TabControl Width="800">
                <TabItem Header="Home">
                    <TextBlock FontWeight="Bold" FontSize="25" HorizontalAlignment="Center">Welcome to AirBnB</TextBlock>
                </TabItem>
                <TabItem Header="Landlords">
                 <!--Get the Landlord View -->
                    <Views:LandlordView />    
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Window>
